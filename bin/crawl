#!/usr/bin/env ruby

require 'spider'
require "thor"


class Crawl < Thor
  desc 'seed LOCATION', 'start the webcrawl at LOCATION'
  def seed(location)
    s = Spider::Core.new
    s.seed(location).scrape.crawl(20)
  end

  desc 'go', 'crawl on the links that are already obtained'
  def go
    s = Spider::Core.new
    s.scrape
  end
end


Crawl.start(ARGV)
