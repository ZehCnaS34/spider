#!/usr/bin/env ruby

require 'spider'
require 'spider/util'
require "thor"


class S
  include Spider
  include Spider::Util
end


class Crawl < Thor
  desc 'seed LOCATION', 'start the webcrawl at LOCATION'
  def seed(location)
    puts S.new.seed(location).crawl(10)
  end

  desc 'go', 'crawl on the links that are already obtained'
  def go
    puts S.new.crawl(100)
  end
end


Crawl.start(ARGV)
