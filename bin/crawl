#!/usr/bin/env ruby

require 'spider'
require "thor"


class Crawl < Thor
  desc 'seed LOCATION', 'start the webcrawl at LOCATION'
  def seed(location)
    puts Spider::Core.new.seed(location)
  end

  desc 'go', 'crawl on the links that are already obtained'
  def go
    puts Spider::Core.new.crawl
  end
end


Crawl.start(ARGV)
